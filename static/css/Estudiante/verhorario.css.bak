/* Responsive */
@media (max-width: 992px) {
    .table-responsive {
        border-radius: var(--radius);
        border: 1px solid var(--border);
    }
    
    #scheduleTable {
        min-width: 800px;
    }
}

/* Animaciones */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

#scheduleBody tr {
    animation: fadeIn 0.3s ease-out forwards;
}

#scheduleBody tr:nth-child(2) { animation-delay: 0.05s; }
#scheduleBody tr:nth-child(3) { animation-delay: 0.1s; }
#scheduleBody tr:nth-child(4) { animation-delay: 0.15s; }
#scheduleBody tr:nth-child(5) { animation-delay: 0.2s; }
#scheduleBody tr:nth-child(6) { animation-delay: 0.25s; }

