.btn-usuario {
  background: none !important;        /* sin fondo */
  border: none !important;            /* sin borde */
  color: #050733ff !important;        /* color del Ã­cono */
  width: 45px;
  height: 45px;
  border-radius: 50%;                 /* forma redonda */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  padding: 0;
  box-shadow: none !important;
  margin-left: 10px;
}

/* Al pasar el mouse â€” sin fondo azul */
.btn-usuario:hover,
.btn-usuario:focus,
.btn-usuario:active {
    background: none !important;
    border: none !important;
    box-shadow: none !important;
    color: #050733ff !important; /* solo cambia el color del Ã­cono */
    outline: none !important;
}

/* ðŸ”¹ Evita que Bootstrap le ponga el Ã­cono de desplegable (flechita â†“) */
.btn-usuario::after {
    display: none !important;
}

